<footer class="footer-section global-footer{{#is "index,post,tag,author"}}{{#if @member}} is-access{{/if}}{{/is}}">
	<div class="footer-wrap">
		<div class="footer-logo">
			{{#if @site.logo}}
			<a href="https://deriv-careers.ghost.io/" class="is-image"><img src="{{@site.logo}}" alt="{{@site.title}}"></a>
			{{else}}
			<a href="https://deriv-careers.ghost.io/" class="is-title">{{@site.title}}</a>
			{{/if}}
		</div>
		<div class="footer-nav">
			<div class="footer-nav-column is-social">
				<small>{{t "Social"}}</small>
				<ul>
					{{#if @site.facebook}}
					<li><a href="{{facebook_url}}">{{>icons/social/facebook}}</a></li>
					{{/if}}
					<li><a href="https://www.instagram.com/deriv_official">{{>icons/social/instagram}}</a></li>
					{{>footer_icons}}
				</ul>
			</div>
			<div class="footer-nav-column is-social">
				<small class="hide-strict">{{t "Social"}}</small>
				<ul>
					{{#if @site.twitter}}
					<li><a href="{{twitter_url}}">{{>icons/social/twitter}}</a></li>
					{{/if}}
					<li><a href="https://www.pinterest.com/derivdotcom/">{{>icons/social/pinterest}}</a></li>
					{{>footer_icons}}
				</ul>
			</div>

			<div class="footer-nav-column is-social">
				<small class="hide-strict">{{t "Social"}}</small>
				<ul>
					<li><a href="https://www.linkedin.com/company/derivdotcom/">{{>icons/social/linkedin}}</a></li>
					<li><a href="https://www.youtube.com/c/Derivdotcom">{{>icons/social/youtube}}</a></li>
					{{>footer_icons}}
				</ul>
			</div>
			{{#if @site.secondary_navigation}}
			{{navigation type="secondary"}}
			{{/if}}
		</div>
	</div>
	<div class="footer-copyright hide">
		<a href="{{@site.url}}">{{@site.title}}</a> &copy; {{date format="YYYY"}} â€”
		{{#if @custom.footer_copyright}}
		{{{@custom.footer_copyright}}}
		{{else}}
		{{{t "All Right Reserved. Published with {ghost-link} & {theme-name}." ghost-link="<a href=\"https://ghost.org\" target=\"_blank\" rel=\"noopener noreferrer\">Ghost</a>" theme-name="<a href=\"https://fueko.net\" target=\"_blank\" rel=\"noopener noreferrer\">Genki</a>"}}}
		{{/if}}
	</div>
</footer>