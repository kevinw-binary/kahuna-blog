<footer class="footer-section global-footer{{#is "index,post,tag,author"}}{{#if @member}} is-access{{/if}}{{/is}}">
	<div class="footer-wrap">
		<div class="footer-logo">
			<a href="https://derivlife.com">{{>icons/site/derivlife}} </a>
		</div>
		<div class="footer-nav">
			<div class="footer-nav-column is-social">
				<small>{{t "Social"}}</small>
				<ul>
					{{#if @site.facebook}}
					<li><a href="{{facebook_url}}" target="_blank">{{>icons/social/facebook}} Facebook</a> </li>
					{{/if}}
					<li><a href="https://www.instagram.com/deriv_official " target="_blank">{{>icons/social/instagram}} Instagram</a></li>
					{{>footer_icons}}
				</ul>
			</div>
			<div class="footer-nav-column is-social">
				<small class="hide-strict">{{t "Social"}}</small>
				<ul>
					{{#if @site.twitter}}
					<li><a href="{{twitter_url}}" target="_blank">{{>icons/social/twitter}}Twitter</a></li>
					{{/if}}
					<li><a href="https://www.pinterest.com/derivdotcom/" target="_blank">{{>icons/social/pinterest}} Pinterest</a></li>
					{{>footer_icons}}
				</ul>
			</div>

			<div class="footer-nav-column is-social">
				<small class="hide-strict">{{t "Social"}}</small>
				<ul>
					<li><a href="https://www.linkedin.com/company/derivdotcom/" target="_blank">{{>icons/social/linkedin}} LinkedIn</a></li>
					<li><a href="https://www.youtube.com/c/Derivdotcom" target="_blank">{{>icons/social/youtube}} Youtube</a></li>
					{{>footer_icons}}
				</ul>
			</div>
			<div class="footer-nav-column is-social">
				<small class="hide-strict">{{t "Social"}}</small>
				<ul>
					<li><a href="https://www.tiktok.com/@derivdotcom" target="_blank">{{>icons/social/tiktok}} Tiktok</a></li>
					{{>footer_icons}}
				</ul>
			</div>
			{{#if @site.secondary_navigation}}
			{{navigation type="secondary"}}
			{{/if}}
		</div>
	</div>
	<div class="footer-copyright hide">
		<a href="{{@site.url}}">{{@site.title}}</a> &copy; {{date format="YYYY"}} â€”
		{{#if @custom.footer_copyright}}
		{{{@custom.footer_copyright}}}
		{{else}}
		{{{t "All Right Reserved. Published with {ghost-link} & {theme-name}." ghost-link="<a href=\"https://ghost.org\" target=\"_blank\" rel=\"noopener noreferrer\">Ghost</a>" theme-name="<a href=\"https://fueko.net\" target=\"_blank\" rel=\"noopener noreferrer\">Genki</a>"}}}
		{{/if}}
	</div>
</footer>