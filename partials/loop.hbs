<div class="loop-section">
	<div class="loop-wrap">
		{{#foreach posts}}
		{{>item show_tags=true}}
		{{/foreach}}
		<script type="text/javascript">
			width='100%';		// the width of the embedded map in pixels or percentage
			height='650';		// the height of the embedded map in pixels or percentage
			border='0';		// the width of the border around the map (zero means no border)
			shownames='true';	// to display ship names on the map (true or false)
			latitude='37.4460';	// the latitude of the center of the map, in decimal degrees
			longitude='24.9467';	// the longitude of the center of the map, in decimal degrees
			zoom='17';		// the zoom level of the map (values between 2 and 17)
			maptype='0';		// use 0 for Normal Map, 1 for Satellite
			trackvessel='228096920';	// MMSI of a vessel (note: vessel will be displayed only if within range of the system) - overrides "zoom" option
			fleet='';		// the registered email address of a user-defined fleet (user's default fleet is used) - overrides "zoom" option
			margin='1vw';
		</script>

		<script type="text/javascript" src="https://www.marinetraffic.com/js/embed.js"></script>
	</div>
</div>