<div class="loop-section">
	<div class="kahuna-team">
		<h2 class="heading-kahuna">Most recent articles</h2>
	</div>
	<div class="loop-wrap">
		{{#get "posts" filter="tag:blog"}}
			{{#foreach posts}}
				{{>item show_tags=true}}
			{{/foreach}}
		{{/get}}
	</div>

		<div class="pagination-wrap see-all">
			<a href="https://deriv-careers.ghost.io/tag/blog/" id="all-articles">
			<button class="black-button">{{t "See all articles"}}</button>
			</a>
		</div>
	<div class="kahuna-team">
		<h2 class="heading-kahuna">Meet the team</h2>
	</div>
	<div class="loop-wrap">
		{{#get "posts" filter="tag:team"}}
			{{#foreach posts}}
				{{>item show_tags=true}}
			{{/foreach}}
		{{/get}}
	</div>
	
</div>