{{^if custom_page}}
<header class="header-section">
	<div class="header-wrap">
		<div class="header-logo">
			{{#if @site.logo}}
			<a href="https://derivlife.com/" class="is-image"><img src="{{@site.logo}}" alt="{{@site.title}}"></a>
			{{else}}
			<a href="https://derivlife.com/" class="is-title">{{@site.title}}</a>
			{{/if}}
		</div>
		<div class="header-nav">
			<input id="toggle" class="header-checkbox" type="checkbox">
			<label class="header-toggle" for="toggle">
				<span>
					<span class="bar"></span>
					<span class="bar"></span>
					<span class="bar"></span>
				</span>
			</label>
			<nav>
				{{navigation}}
				{{>search enabled_search=true}}
			</nav>
		</div>
	</div>
</header>
{{else}}
<header class="header-section">
	<div class="header-wrap">
		<div class="header-logo">
			{{#if @site.logo}}
			<a class="is-image" href="https://derivlife.com/"> <img src="{{@site.logo}}" alt="{{@site.title}}"></a>
			{{else}}
			<a class="is-title" href="https://derivlife.com/"> {{@site.title}}</a>
			{{/if}}
		</div>
	</div>
</header>
{{/if}}